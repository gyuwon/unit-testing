<Window x:Class="HelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hello World" Height="350" Width="525">
  <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
    <Grid.ColumnDefinitions>
      <ColumnDefinition />
      <ColumnDefinition />
    </Grid.ColumnDefinitions>
    <Button x:Name="GetMessageButton" MinWidth="100" Margin="5,5,0,5" Content="Get a Message" Click="GetMessageButton_Click" />
    <TextBox x:Name="MessageTextBox" Grid.Column="1" MinWidth="200" Margin="5" />
  </Grid>
</Window>
